{
  "name": "oneones.app",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "start": "next start",
    "test": "jest --env=jsdom",
    "test:ci": "jest --env=jsdom --coverage --watchAll=false --maxWorkers=2",
    "prettify": "prettier -c --write \"*/**\"",
    "lint": "eslint . --ext .ts,.tsx,.js && stylelint '**/*.css'",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix && stylelint '**/*.css' --fix",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@notionhq/client": "^0.2.3",
    "classnames": "^2.3.1",
    "isomorphic-unfetch": "^3.1.0",
    "next": "11.0.1",
    "preact": "^10.5.14",
    "preact-render-to-string": "^5.1.19",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^26.0.24",
    "@types/node": "16.4.8",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.15",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "@zeit/next-css": "^1.0.1",
    "@zlph/eslint-config-react-app": "^0.0.7",
    "autoprefixer": "^10.3.1",
    "babel-eslint": "10.x",
    "babel-jest": "^27.0.6",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "dotenv": "^10.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "5.8.2",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-dom": "^4.0.0",
    "lint-staged": "^11.1.1",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^2.2.7",
    "ts-jest": "^27.0.4",
    "typescript": "4.3.5"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "**/*.css": "stylelint --fix",
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
